<Page x:Class="TouhouLauncher.View.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TouhouLauncher.View"
      mc:Ignorable="d" 
      d:DesignWidth="1000" d:DesignHeight="800"
      Title="SettingsPage"
	  DataContext="{Binding Settings, Source={StaticResource Locator}}">
	<Grid Background="#595362">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="2*"/>
			<ColumnDefinition Width="4*"/>
			<ColumnDefinition Width="1*"/>
		</Grid.ColumnDefinitions>
		<ItemsControl ItemsSource="{Binding SettingCategories}" Padding="0, 100, 0, 0" Background="#4B4554">
			<ItemsControl.ItemsPanel>
				<ItemsPanelTemplate>
					<StackPanel/>
				</ItemsPanelTemplate>
			</ItemsControl.ItemsPanel>
			<ItemsControl.ItemTemplate>
				<DataTemplate>
					<Button Content="{Binding CategoryName}" Padding="0, 7" Margin="20, 5" FontSize="22" Foreground="White" Background="Transparent" BorderThickness="0"/>
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>
		<Button Grid.Column="2" Command="{Binding BackCommand}" Content="Back" Width="50" Height="50" Margin="0, 650, 0, 0" Background="Transparent" Foreground="White" FontSize="20" BorderBrush="White"/>
	</Grid>
</Page>
