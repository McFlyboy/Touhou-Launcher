<UserControl x:Class="TouhouLauncher.Views.UserControls.Settings.GameLocationsSettings"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
		xmlns:local="clr-namespace:TouhouLauncher.Views.UserControls.Settings"
		mc:Ignorable="d" 
		d:DesignHeight="800" d:DesignWidth="600"
        DataContext="{Binding GameLocationsSettingsVM, Source={StaticResource Dependencies}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock
            Text="Game locations"
            Foreground="White"
            FontSize="22"
            FontWeight="Bold"
            VerticalAlignment="Center"
        />
    </Grid>
</UserControl>
